<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ngiu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_title_background</item>
        <item name="colorPrimaryVariant">@color/app_title_background</item>
        <item name="colorOnPrimary">@color/app_title_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_title_background</item>
        <item name="colorSecondaryVariant">@color/app_title_background</item>
        <item name="colorOnSecondary">@color/app_title_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_title_background</item>
        <!-- Customize your theme here. -->
        <item name="toolbarNavigationButtonStyle">@style/toolbarNavigationButtonStyle</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
    </style>

    <style name="Theme.Ngiu.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ngiu.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ngiu.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>