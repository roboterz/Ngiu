<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="popup_dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowTitleStyle">@style/popup_dialog_title</item>
    </style>

    <style name="popup_dialog_title" parent="android:Widget.TextView">
        <item name="android:background">#5cc5cc</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>


