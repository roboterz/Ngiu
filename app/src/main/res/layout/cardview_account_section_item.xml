<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/app_list_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_account_section_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="@color/app_section_background"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="5dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"
            android:paddingVertical="6dp"
            android:background="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:id="@+id/ivExpandRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:src="@drawable/ic_baseline_arrow_right_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/app_icon_light" />

            <ImageView
                android:id="@+id/ivCollapseRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_arrow_right_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


            <TextView
                android:id="@+id/tvAccountTypeTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/app_text"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/ivExpandRow"
                app:layout_constraintStart_toEndOf="@+id/ivExpandRow"
                app:layout_constraintTop_toTopOf="@id/ivExpandRow"
                tools:text="Account Type" />

            <TextView
                android:id="@+id/tvAccountHeaderBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_sub_line_text"
                tools:text="Account Balance"
                app:layout_constraintTop_toTopOf="@id/ivExpandRow"
                app:layout_constraintBottom_toBottomOf="@id/ivExpandRow"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardview_account_section_item"
         />

</androidx.constraintlayout.widget.ConstraintLayout>