<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rewards.RewardsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_rewards"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        app:menu="@menu/title_menu"
        app:title="@string/nav_title_rewards"
        app:titleCentered="true"
        tools:ignore="MissingConstraints"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_rewards_cards"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clipChildren="false"
        android:background="@color/app_section_background"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_rewards"
        app:layout_constraintBottom_toTopOf="@+id/ly_rewards_rv">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_rewards_cards"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="80dp"
            android:layout_height="150dp"
            android:clipChildren="false"
            tools:ignore="MissingConstraints">

        </androidx.viewpager2.widget.ViewPager2>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_rewards_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/app_section_background"
        app:layout_constraintTop_toBottomOf="@+id/ly_rewards_cards"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_rewards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-1dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>