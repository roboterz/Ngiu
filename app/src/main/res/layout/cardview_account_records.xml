<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_account_records"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/app_section_background"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="7dp"
    android:layout_margin="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvbAccountRecordsName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/app_text"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="subcat" />

        <TextView
            android:id="@+id/tvAccountRecordTransaction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/app_text"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"


            app:layout_constraintStart_toEndOf="@+id/tvbAccountRecordsName"
            tools:text="$-20" />

        <TextView
            android:id="@+id/tvAccountRecordDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/app_text"
            app:layout_constraintEnd_toEndOf="@+id/tvAccountRecordTransaction"
            app:layout_constraintStart_toStartOf="@+id/tvbAccountRecordsName"
            app:layout_constraintTop_toBottomOf="@+id/tvbAccountRecordsName"
            tools:text="09/18" />


        <TextView
            android:id="@+id/tvAccountRecordsBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvbAccountRecordsName"
            tools:text="$235.75" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>