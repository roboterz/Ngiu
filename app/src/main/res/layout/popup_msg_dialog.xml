<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_section_background"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_popup_msg_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/app_title_background"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_popup_msg_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="Prompt"
            android:textColor="@color/app_title_text"
            android:textSize="18sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_popup_msg_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingHorizontal="30dp"
        android:paddingBottom="60dp"
        android:background="@color/app_section_background"
        app:layout_constraintTop_toBottomOf="@+id/ly_popup_msg_top"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_popup_msg_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text="Save as template?"
            android:textColor="@color/app_text"
            android:textSize="16sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_popup_msg_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/app_section_background"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ly_popup_msg_middle"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_popup_msg_button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/app_label_text"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="center"
            android:clickable="true"
            android:background="@color/app_button_background"
            app:layout_constraintWidth_percent="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/msg_button_cancel" />

        <TextView
            android:id="@+id/tv_popup_msg_button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/app_label_text"
            android:textSize="18sp"
            android:padding="10dp"
            app:layout_constraintWidth_percent="0.499"
            android:gravity="center"
            android:clickable="true"
            android:background="@color/app_button_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/msg_button_confirm" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>