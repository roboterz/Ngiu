<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_calendar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    app:cardBackgroundColor="@color/app_section_background"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_calendar_item"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/cv_calendar_tv_month_day"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:singleLine="true"
            android:textColor="@color/app_option_text"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="11-13" />


        <TextView
            android:id="@+id/cv_calendar_tv_account_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:text="Card Name"
            android:textColor="@color/app_text"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cv_calendar_tv_month_day"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/cv_calendar_tv_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:singleLine="true"
            android:textColor="@color/app_text"
            android:textSize="18sp"
            android:textStyle="normal"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="$0.00" />


        <CheckBox
            android:id="@+id/cv_calendar_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/cv_calendar_img_circle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="2dp"
            android:tint="@color/app_icon_light"
            app:layout_constraintStart_toStartOf="@id/cv_calendar_tv_month_day"
            app:layout_constraintTop_toBottomOf="@id/cv_calendar_tv_month_day"
            app:srcCompat="@drawable/ic_baseline_circle_24"
            tools:ignore="UseAppTint" />

        <View
            android:id="@+id/cv_calendar_div_date"
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3.5dp"
            android:background="@color/app_icon_light"
            app:layout_constraintStart_toStartOf="@id/cv_calendar_img_circle"
            app:layout_constraintTop_toBottomOf="@id/cv_calendar_img_circle" />

        <View
            android:id="@+id/cv_calendar_div_sep"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/app_icon_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/cv_calendar_div_date"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>