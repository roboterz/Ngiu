<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_sub_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_section_background"
    android:layout_marginTop="0.5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_section_background">

        <TextView
            android:id="@+id/tv_sub_category_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp"
            android:gravity="center|left"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@color/app_amount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_sub_category_star"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <ImageView
            android:id="@+id/img_sub_category_star"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="15dp"
            app:srcCompat="@drawable/ic_baseline_star_border_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>