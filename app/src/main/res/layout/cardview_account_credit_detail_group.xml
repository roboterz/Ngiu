<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view_account_credit_detail_group_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/app_list_group_header">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_account_credit_detail_group_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:paddingVertical="8dp"
            android:background="@color/app_section_background"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/iv_account_credit_detail_group_expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingHorizontal="10dp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/app_icon_light"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_account_credit_detail_group_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="09"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_account_credit_detail_group_year"
                app:layout_constraintEnd_toEndOf="@id/tv_account_credit_detail_group_year"/>

            <TextView
                android:id="@+id/tv_account_credit_detail_group_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:textColor="@color/app_sub_line_text"
                android:textSize="12sp"
                android:text="2021"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_account_credit_detail_group_month"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_account_credit_detail_group_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_marginStart="15dp"
                android:textColor="@color/app_text"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_account_credit_detail_group_year"
                app:layout_constraintEnd_toStartOf="@id/tv_account_credit_detail_group_amount"
                tools:text="Amount Due:" />
            <TextView
                android:id="@+id/tv_account_credit_detail_group_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_marginStart="8dp"
                android:textColor="@color/app_text"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_account_credit_detail_group_text"
                app:layout_constraintEnd_toStartOf="@id/iv_account_credit_detail_group_expand_collapse"
                tools:text="$270.00" />

            <TextView
                android:id="@+id/tv_account_credit_detail_group_term"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_marginStart="15dp"
                android:textColor="@color/app_sub_line_text"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_account_credit_detail_group_text"
                app:layout_constraintStart_toEndOf="@id/tv_account_credit_detail_group_year"
                app:layout_constraintEnd_toStartOf="@id/iv_account_credit_detail_group_expand_collapse"
                tools:text="08/27 - 09/29" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_account_credit_detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tv_account_credit_detail_group_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/layout_account_credit_detail_group_item"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
            android:id="@+id/tv_account_credit_detail_group_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/app_list_group_header"
            app:layout_constraintTop_toBottomOf="@id/recyclerview_account_credit_detail_item"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

