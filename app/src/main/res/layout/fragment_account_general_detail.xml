<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.detail.AccountGeneralDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_account_general_detail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="@string/nav_title_account_detail"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:menu="@menu/title_menu"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_account_general_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="8dp"
        android:background="@color/app_list_background"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_account_general_detail">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_account_general_account_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/app_section_background"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="5dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_account_general_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_name_value"
                android:textColor="@color/app_sub_line_text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/ic_baseline_credit_card_24"
                app:drawableTint="@color/app_title_background"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_account_general_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_zero_with_dollar_sign"
                android:textColor="@color/app_amount"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                app:drawableEndCompat="@drawable/ic_baseline_edit_24"
                app:drawableTint="@color/app_title_background"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:background="@color/app_section_background"
            app:layout_constraintTop_toBottomOf="@+id/layout_account_general_account_name"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/tv_account_general_inflow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text="@string/option_account_inflow"
                android:textColor="@color/app_sub_line_text"
                android:textSize="14sp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toBottomOf="@+id/tv_account_general_inflow_amount"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_account_general_inflow_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/amount_zero_with_dollar_sign"
                android:gravity="center"
                android:textColor="@color/app_income_amount"
                android:textSize="14sp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_account_general_outflow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text="@string/option_account_outflow"
                android:textColor="@color/app_sub_line_text"
                android:textSize="14sp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/tv_account_general_outflow_amount"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_account_general_outflow_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/amount_zero_with_dollar_sign"
                android:textColor="@color/app_expense_amount"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_account_general_outflow" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/app_section_background"
        app:layout_constraintTop_toBottomOf="@+id/layout_account_general_info"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_account_general_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>