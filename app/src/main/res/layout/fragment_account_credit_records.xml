<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountCreditDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_account_credit_card_details"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/title_menu"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_list_background"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_account_credit_card_details">

        <TextView
            android:id="@+id/tv_account_info_statement_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/option_account_statement_date"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3" />

        <TextView
            android:id="@+id/tv_account_info_statement_day_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="27th"
            android:textAlignment="textStart"
            app:layout_constraintStart_toEndOf="@id/tv_account_info_statement_day"
            app:layout_constraintTop_toTopOf="@id/tv_account_info_statement_day"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/tv_account_info_payment_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/option_account_payment_date"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toStartOf="@id/tv_account_info_payment_day_value"
            app:layout_constraintTop_toTopOf="@+id/tv_account_info_statement_day"
            app:layout_constraintWidth_percent="0.3" />

        <TextView
            android:id="@+id/tv_account_info_payment_day_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10/22"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_account_info_statement_day"
            app:layout_constraintWidth_percent="0.2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/app_title_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_info_statement_day">

            <TextView
                android:id="@+id/tv_account_detail_current_arrears"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/option_account_current_arrears"
                android:textAlignment="center"
                android:textColor="@color/app_title_text"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/tv_account_detail_available_credit_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/option_account_available_credit_limit"
                android:textAlignment="center"
                android:textColor="@color/app_title_text"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_account_detail_current_arrears"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/tv_account_detail_current_arrears_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/app_title_text"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_account_detail_current_arrears"
                app:layout_constraintWidth_percent="0.5"
                tools:text="@string/amount_zero_with_dollar_sign" />

            <TextView
                android:id="@+id/tv_account_detail_available_credit_limit_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/amount_zero_with_dollar_sign"
                android:textAlignment="center"
                android:textColor="@color/app_title_text"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_account_detail_available_credit_limit"
                app:layout_constraintWidth_percent="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/app_section_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_account_info">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_account_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>